<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	android:clickable="true"
	android:minHeight="72dp"
	android:paddingLeft="8dp"
	android:paddingRight="8dp">

	<ImageView
		android:id="@+id/imageView_poster"
		android:layout_width="54dp"
		android:layout_height="72dp"
		android:layout_marginLeft="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/textView_title_year"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:textAppearance="?android:textAppearanceLarge"
		app:layout_constraintBottom_toTopOf="@+id/textView_type"
		app:layout_constraintLeft_toRightOf="@+id/imageView_poster"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed"/>

	<TextView
		android:id="@+id/textView_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:textAppearance="?android:textAppearanceSmall"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@+id/textView_title_year"
		app:layout_constraintTop_toBottomOf="@+id/textView_title_year"/>

</android.support.constraint.ConstraintLayout>
